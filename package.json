{
  "name": "email-editor",
  "version": "0.1.0",
  "description": "Block-based email editor library for Vue 2.7.",
  "type": "module",
  "main": "dist/vue3/email-editor.iife.js",
  "module": "dist/vue3/email-editor.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build -c vite.build.v3.config.ts",
    "build:vue2": "vite build",
    "build:vue3": "vite build -c vite.build.v3.config.ts",
    "demo": "vite -c demo/vite.config.ts",
    "demo:vue3": "vite -c demo-vue3/vite.config.ts",
    "preview": "vite preview",
    "test": "vitest run",
    "test:vue3": "vitest run -c vite.v3.config.ts",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --check .",
    "typecheck": "vue-tsc --noEmit"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitejs/plugin-vue2": "^2.2.0",
    "@vue/test-utils": "^1.3.6",
    "@vue/test-utils-vue3": "npm:@vue/test-utils@^2",
    "@vue/compiler-sfc-vue3": "npm:@vue/compiler-sfc@^3.4",
    "@vue/compiler-sfc": "^2.7.16",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.33.0",
    "jsdom": "^25.0.0",
    "playwright": "^1.52.0",
    "prettier": "^3.2.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^2.1.2",
    "vue": "^2.7.16",
    "vue3": "npm:vue@^3.5.0",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.2.0"
  },
  "peerDependencies": {
    "vue": "^2.7.0 || ^3.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/vue3/email-editor.es.js",
      "require": "./dist/vue3/email-editor.iife.js",
      "types": "./dist/index.d.ts"
    },
    "./vue2": {
      "import": "./dist/vue2/email-editor.es.js",
      "require": "./dist/vue2/email-editor.iife.js",
      "types": "./dist/index.d.ts"
    },
    "./vue3": {
      "import": "./dist/vue3/email-editor.es.js",
      "require": "./dist/vue3/email-editor.iife.js",
      "types": "./dist/index.d.ts"
    }
  }
}
